


<div class="pt-8 pb-8 grid grid-cols-12 md:divide-x md:divide-gray-200 md:dark:divide-gray-700">



<div class="md:sticky md:h-screen w-full top-0 col-span-12 md:col-span-3 lg:col-span-2 md:pr-8 pb-4 md:pb-0">

<h1 class="text-fred dark:text-fgreen font-OpenSauceSans font-bold tracking-tighter text-2xl md:text-4xl pb-2 md:pb-4 pt-4"> Work  </h1>

<p class ="text-gray-700 dark:text-gray-200 text-sm "> Thoughts on the future of work, from the people and teams creating it. </p>

</div>


<div class="grid grid-cols-10 col-span-12 md:col-span-9 lg:col-span-10">


  
  {% for item in collections.featuredWork %}
  {% if item.data.displayOrder == 1 %}
      <div class="group col-span-10 bg-bggray-dark dark:bg-bgblue h-128 transition delay-400 lg:hover:-translate-y-2 lg:hover:shadow-xl ml-0 mb-8 md:ml-8 cursor-wait shadow-sm">
        

        <a
          href="{{ item.url }}"
          aria-label="See {{ item.data.title }}"
          class="flex flex-col-reverse md:flex-row justify-between h-full"
        >
          <div class="col-span-4 p-4 md:px-8 md:py-8 w-full lg:w-2/5 flex flex-col justify-between">
            <div>
              <h3 class="text-2xl md:text-3xl text-fred dark:text-fgreen font-bold font-OpenSauceSans tracking-tight pb-4"> {{ item.data.title }} </h3>
              <p class="text-sm md:text-base font-OpenSauceSans text-gray-700 dark:text-gray-200">{{ item.data.description }} </p>
            </div>

            <p class="text-sm uppercase font-OpenSauceSans text-gray-500 dark:text-gray-400 tracking-wider pt-8">{{ item.data.duration }} </p>
            
          </div>

          
            <picture class="col-span-8 mx-auto h-4/5 md:h-full lg:w-3/5 flex justify-center items-center overflow-hidden">
              <img
                src="{{ item.data.hero.image }}"
                alt="{{ item.data.hero.imageAlt }}"
                loading="lazy"
                class="flex-shrink-0 min-w-full min-h-full"
              />
            </picture>
        </a>
    </div>

  {% else %}

    <div class="col-span-10 lg:col-span-5 ml-0 md:ml-8 mb-8">

    <div class="bg-bggray-dark dark:bg-bgblue transition delay-400 lg:hover:-translate-y-2 lg:hover:shadow-xl shadow-sm">
    
      <a
        href="{{ item.url }}"
        aria-label="See {{ item.data.title }}"
        class=""
      >
          <picture class="mx-auto h-96 w-full flex justify-center items-center overflow-hidden">
              <img
                src="{{ item.data.hero.image }}"
                alt="{{ item.data.hero.imageAlt }}"
                loading="lazy"
                class="flex-shrink-0 min-w-full min-h-full"
              />
          </picture>

          <div class="p-4 md:px-8 md:py-8 w-full h-2/5 flex flex-col justify-between">
            <div>
              <h3 class="text-2xl md:text-3xl text-fred dark:text-fgreen font-bold font-OpenSauceSans tracking-tight pb-4"> {{ item.data.title }} </h3>
              <p class="text-sm md:text-base font-OpenSauceSans text-gray-700 dark:text-gray-200">{{ item.data.description }} </p>
            </div>

            <p class="text-sm uppercase font-OpenSauceSans text-gray-500 dark:text-gray-400 tracking-wider pt-8">{{ item.data.duration }} </p>
            
          </div>


      </a>

    </div>  
    </div>
  {% endif %}

{% endfor %}

</div>
  
</div>

